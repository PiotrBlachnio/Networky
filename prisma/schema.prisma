generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String 
  firstName String
  lastName  String
  gender    String
  posts     Post[]
  comments  Comment[]
}

model Post {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  content   String
  likes     Int       @default(0)
  createdAt DateTime  @default(now())
  comments Comment[]
}

model Comment {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  post      Comment   @relation(fields: [postId], references: [id])
  postId    String
  content   String
  likes     Int       @default(0)
  createdAt DateTime  @default(now())
}